# Claude API Bridge (optional — enables cloud escalation when local LLM fails)
ANTHROPIC_API_KEY=
KAIT_CLAUDE_MODEL=claude-sonnet-4-20250514

# TTS Configuration
# Backend: auto|elevenlabs|openai|piper|say (default: auto)
KAIT_TTS_BACKEND=auto
# Voice name/ID (backend-specific, leave blank for default)
KAIT_TTS_VOICE=
# Speech speed multiplier (default: 1.0)
KAIT_TTS_SPEED=1.0

# ElevenLabs TTS (requires KAIT_TTS_BACKEND=elevenlabs or auto)
ELEVEN_LABS_API_KEY=

# OpenAI TTS (requires KAIT_TTS_BACKEND=openai or auto)
OPENAI_API_KEY=

# LLM Configuration
KAIT_LLM_TEMPERATURE=0.7
KAIT_LLM_MAX_TOKENS=2048
KAIT_NO_STREAM=false

# Sidekick Timing
KAIT_IDLE_REFLECTION_S=30.0
KAIT_MOOD_TICK_S=2.0

# GitHub Integration (OS Sidekick)
#
# IMPORTANT: Use a classic PAT with ONLY 'public_repo' scope.
# This ensures the token physically cannot access private repos.
# Create at: https://github.com/settings/tokens/new
# Required scope: public_repo (NOT full 'repo')
# Optional scope: workflow (for GitHub Actions)
#
KAIT_GITHUB_TOKEN=
# GitHub account name (user or org)
KAIT_GITHUB_OWNER=BLERBZ
# Legacy alias (deprecated, use KAIT_GITHUB_OWNER)
KAIT_GITHUB_ORG=BLERBZ
# Comma-separated allowlist (optional — if empty, all public repos are accessible)
KAIT_GITHUB_ALLOWED_REPOS=
# PUBLIC-ONLY MODE: true = Kait can ONLY access public repos (default: true)
# WARNING: Setting this to false removes the safety block on private repos.
KAIT_GITHUB_PUBLIC_ONLY=true

# BLERBZ Branding
KAIT_BLERBZ_NAME=BLERBZ LLC
KAIT_BLERBZ_URL=https://blerbz.com
KAIT_BLERBZ_LICENSE=MIT

# Robin Sync Configuration
KAIT_ROBIN_REPO=robin
KAIT_ROBIN_SYNC_BRANCH=main
KAIT_SOURCE_REPO=kait-intel
KAIT_ROBIN_AUTO_SYNC=false

# Matrix Integration (optional)
KAIT_MATRIX_ENABLED=false
KAIT_MATRIX_HOMESERVER=https://matrix.org
KAIT_MATRIX_USER=@kait-intel:matrix.org
KAIT_MATRIX_PASSWORD=your-secure-password-here
KAIT_MATRIX_ROOM_IDS=
KAIT_MATRIX_DEVICE_NAME=kait-intel
