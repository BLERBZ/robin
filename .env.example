# Claude API Bridge (optional — enables cloud escalation when local LLM fails)
ANTHROPIC_API_KEY=
KAIT_CLAUDE_MODEL=claude-sonnet-4-20250514

# TTS Configuration
# Backend: auto|elevenlabs|openai|piper|say (default: auto)
KAIT_TTS_BACKEND=auto
# Voice name/ID (backend-specific, leave blank for default)
KAIT_TTS_VOICE=
# Speech speed multiplier (default: 1.0)
KAIT_TTS_SPEED=1.0

# ElevenLabs TTS (requires KAIT_TTS_BACKEND=elevenlabs or auto)
ELEVEN_LABS_API_KEY=

# OpenAI TTS (requires KAIT_TTS_BACKEND=openai or auto)
OPENAI_API_KEY=

# LLM Configuration
KAIT_LLM_TEMPERATURE=0.7
KAIT_LLM_MAX_TOKENS=2048
KAIT_NO_STREAM=false

# Intelligent LLM Routing (requires: pip install routellm)
# When enabled, uses ML-based classification to route complex queries to
# cloud models and keep simple chat on Ollama.
KAIT_ROUTER_ENABLED=true
# Router type: mf (matrix factorization) | sw_ranking | bert
KAIT_ROUTER_TYPE=mf
# Score threshold: 0.0=always cloud, 0.11593=balanced, 1.0=always local
KAIT_ROUTER_THRESHOLD=0.11593
# Strong provider target: claude | openai
KAIT_ROUTER_STRONG=claude

# OpenAI Generation (enables OpenAI as a routing target)
# Uses the same OPENAI_API_KEY as TTS above
KAIT_OPENAI_MODEL=gpt-4o

# LLM Observability (Phase 1)
# Records every LLM call with latency, tokens, errors, cost
KAIT_LLM_OBS_ENABLED=true

# Circuit Breakers (Phase 2)
# Per-provider circuit breakers for automatic failover
KAIT_CB_ENABLED=true
KAIT_CB_FAILURE_THRESHOLD=3
KAIT_CB_RECOVERY_TIMEOUT_S=60
KAIT_CB_HALF_OPEN_TESTS=2
# LLM health checks in watchdog
KAIT_LLM_WATCHDOG_ENABLED=true

# Olla Integration (Phase 3) — Local LLM load balancing
# Routes local inference through Olla proxy for multi-Ollama failover
KAIT_OLLA_ENABLED=false
KAIT_OLLA_HOST=localhost
KAIT_OLLA_PORT=11435
KAIT_OLLA_CONFIG=config/olla.yaml

# LiteLLM Integration (Phase 4) — Universal cloud gateway
# Routes cloud LLM calls through LiteLLM proxy for 100+ provider access
KAIT_LITELLM_ENABLED=false
KAIT_LITELLM_PORT=4000
KAIT_LITELLM_MASTER_KEY=
KAIT_LITELLM_CLAUDE_MODEL=
KAIT_LITELLM_OPENAI_MODEL=

# Sidekick Timing
KAIT_IDLE_REFLECTION_S=30.0
KAIT_MOOD_TICK_S=2.0

# GitHub Integration (OS Sidekick)
#
# IMPORTANT: Use a classic PAT with ONLY 'public_repo' scope.
# This ensures the token physically cannot access private repos.
# Create at: https://github.com/settings/tokens/new
# Required scope: public_repo (NOT full 'repo')
# Optional scope: workflow (for GitHub Actions)
#
KAIT_GITHUB_TOKEN=
# GitHub account name (user or org)
KAIT_GITHUB_OWNER=BLERBZ
# Legacy alias (deprecated, use KAIT_GITHUB_OWNER)
KAIT_GITHUB_ORG=BLERBZ
# Comma-separated allowlist (optional — if empty, all public repos are accessible)
KAIT_GITHUB_ALLOWED_REPOS=
# PUBLIC-ONLY MODE: true = Kait can ONLY access public repos (default: true)
# WARNING: Setting this to false removes the safety block on private repos.
KAIT_GITHUB_PUBLIC_ONLY=true

# BLERBZ Branding
KAIT_BLERBZ_NAME=BLERBZ LLC
KAIT_BLERBZ_URL=https://blerbz.com
KAIT_BLERBZ_LICENSE=MIT

# Robin Sync Configuration
KAIT_ROBIN_REPO=robin
KAIT_ROBIN_SYNC_BRANCH=main
KAIT_SOURCE_REPO=kait-intel
KAIT_ROBIN_AUTO_SYNC=false

# Vault Viewer (GUI tabbed vault panels)
# Paths to Obsidian vaults for the Kait Brain and GitHub Mindmap tabs.
# Leave blank to auto-detect from ~/Obsidian/ defaults.
KAIT_VAULT_BRAIN_PATH=
KAIT_VAULT_GITMAP_PATH=

# Matrix Integration (optional)
KAIT_MATRIX_ENABLED=false
KAIT_MATRIX_HOMESERVER=https://matrix.org
KAIT_MATRIX_USER=@kait-intel:matrix.org
KAIT_MATRIX_PASSWORD=your-secure-password-here
KAIT_MATRIX_ROOM_IDS=
KAIT_MATRIX_DEVICE_NAME=kait-intel
